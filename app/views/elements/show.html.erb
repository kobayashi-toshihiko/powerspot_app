            <!--<div class="d-block border border-primary mt-5 text-center pt-2">-->
            <!--  <h4 class="h4">あなたの属性</h4>-->
            <!--</div>-->
            <!--ログイン済みの場合、ログインユーザの属性を表示-->
            <% if user_signed_in? %>
              <div class="d-flex align-items-center justify-content-center my-5" style="height: 100px; background: red;">

                <h2 class="text-white">あなたは</h2>
                <h2 class="text-dark">「火属性」</h2>
                <h2 class="text-white">です！</h2>
              </div>
              <!--属性の詳細情報リンク-->
              <div class="fw-bold">
                <a href="#">→「火属性」と相性がいいパワースポットについてはこちら</a>
              </div>
            <% else %>
              <div class="col my-4">
                <div class="card d-flex bg-accent">
                  <div class="card-body box-shadow py-4">
                    <div class="d-flex justify-content-center align-items-center fw-bold" style="font-size: 16px;">
                      <p class="text-main">属性を確認するには
                        <a class="text-decoration-none text-primary" href="users/sign_in">ログイン</a>
                        が必要です<br>
                        <a class="text-decoration-none text-primary" href="users/sign_up">会員登録</a>
                        をすると全てのサービスが利用できます
                      </p>
                    </div>
                    <div class="d-flex justify-content-center">
                      <a class= "btn btn-primary bg-primary border-0 px-4 ms-3 fw-bold" href="users/sign_in">ログイン</a>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </section>

          <!--属性相性早見表-->
          <section id="attribute_compatibility">
            <div class="d-block border border-primary mt-5 text-center pt-2">
              <h4 class="h4">属性相性早見表</h4>
            </div>
            <div class="row mt-5">
